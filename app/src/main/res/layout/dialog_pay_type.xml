        <LinearLayout
            android:id="@+id/layout_psw_two"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal" >
            <com.lwc.common.widget.PasswordEditText
                android:id="@+id/et_psd"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:inputType="numberPassword"
                android:background="@color/white"
                app:bgColor="@color/line_cc"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="忘记密码?"
            android:textColor="@color/btn_blue_nomal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="@dimen/dp_150"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:textSize="16sp"
            android:enabled="false"
            android:visibility="gone"
            android:text="下一步"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
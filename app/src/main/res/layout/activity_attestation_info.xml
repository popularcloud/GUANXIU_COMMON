<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/bg_f7"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center"
				android:background="@drawable/btn_round_white_bg"
				android:layout_margin="5dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="完善资料"
					android:textColor="@color/black_66"
					android:textSize="14sp"
					android:drawablePadding="5dp"
					android:drawableTop="@drawable/identitychange_1"
					android:gravity="center_horizontal"/>
				<TextView
					android:id="@+id/tv_shz"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="正在审核"
					android:textColor="@color/black_66"
					android:textSize="14sp"
					android:drawablePadding="5dp"
					android:drawableTop="@drawable/identitychange_2"
					android:gravity="center_horizontal"/>
				<TextView
					android:id="@+id/tv_wc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="完成认证"
					android:textColor="@color/black_66"
					android:textSize="14sp"
					android:drawablePadding="5dp"
					android:drawableTop="@drawable/identitychange_6"
					android:gravity="center_horizontal"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_content"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/btn_round_white_bg"
				android:layout_margin="5dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black_66"
					android:textSize="13sp"
					android:gravity="center_vertical"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="5dp"
					android:drawablePadding="15dp"
					android:drawableLeft="@drawable/identitychange_time"/>

				<LinearLayout
					android:id="@+id/rl_name"
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="34dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="申&#160;&#160;请&#160;&#160;人:"
						android:layout_marginLeft="40dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<TextView
						android:id="@+id/txtName"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:layout_marginRight="20dp"
						android:textSize="14sp"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="34dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="单位名称:"
						android:layout_marginLeft="40dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<TextView
						android:id="@+id/tvCompanyName"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="34dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="单位地址:"
						android:layout_marginLeft="40dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<TextView
						android:id="@+id/txtAddress"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="证明材料:"
						android:layout_marginLeft="40dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<ImageView
						android:id="@+id/imgAdd1"
						android:layout_width="80dp"
						android:layout_height="80dp"
						android:scaleType="fitXY"
						android:layout_marginLeft="20dp"/>
					<ImageView
						android:id="@+id/imgAdd2"
						android:layout_width="80dp"
						android:layout_height="80dp"
						android:scaleType="fitXY"
						android:layout_marginLeft="10dp"/>
				</LinearLayout>
				<View style="@style/line_c8Style"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/tv_sytime"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black_66"
						android:textSize="13sp"
						android:gravity="center_vertical"
						android:layout_marginLeft="15dp"
						android:layout_marginTop="15dp"
						android:layout_marginBottom="15dp"
						android:drawablePadding="15dp"
						android:drawableLeft="@drawable/identitychange_time"/>

					<TextView
						android:id="@+id/tv_defeated"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/black_66"
						android:textSize="13sp"
						android:layout_margin="15dp"
						/>
				</LinearLayout>
			</LinearLayout>
			<Button
				android:id="@+id/btnRevocation"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginLeft="25dp"
				android:layout_marginRight="25dp"
				android:layout_marginTop="30dp"
				android:layout_marginBottom="20dp"
				android:background="@drawable/button_login_selector"
				android:gravity="center"
				android:textSize="15sp"
				android:text="撤销审核"
				android:textColor="#fff"
				android:visibility="gone"/>
		</LinearLayout>
	</ScrollView>


</LinearLayout>

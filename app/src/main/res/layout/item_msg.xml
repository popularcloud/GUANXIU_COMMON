<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:text="2017-12-04"
        android:textColor="@color/black_66"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_icon"
        android:background="@drawable/selector_item_bg"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/dp_180"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="系统消息"
                android:textColor="@color/all_black"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/tv_isMsgRed"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:background="@drawable/small_red_circular_shape"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2017-12-04 12:59"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_15"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="有新版本发布哦！更新了很多新功能，快快去下载体验吧！"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12" />
        <View style="@style/line_c8Style"/>
        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="点击查看"
                android:textColor="@color/black_66"
                android:textSize="@dimen/sp_12" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/you_new"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/f0_gray_line"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>
	<EditText
		android:id="@+id/et_mention_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/dp_15"
		android:textSize="@dimen/sp_14"
		android:textColor="@color/all_black"
		android:hint="请填写您的邀请码"
		android:textColorHint="@color/line_cc"
		android:background="@color/white"
		android:layout_marginTop="@dimen/dp_4" />
	<TextView
		android:id="@+id/txt_mention_1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:text="邀请码由 6位数字 组成"
		android:textColor="@color/gray_99"
		android:layout_marginLeft="@dimen/dp_15"
		android:layout_marginTop="@dimen/dp_10"
		android:textSize="@dimen/sp_12" />

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />
	<Button
		android:id="@+id/btn_comment_submit"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_44"
		android:layout_margin="@dimen/dp_15"
		android:layout_gravity="center_horizontal|bottom"
		android:background="@drawable/button_login_selector"
		android:text="提交"
		android:textSize="@dimen/sp_16"
		android:textColor="@color/white" />
</LinearLayout>

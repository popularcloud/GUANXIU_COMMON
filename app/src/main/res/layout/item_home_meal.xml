<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        android:background="@drawable/lan_xiao">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:text="上门优惠套餐"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_small_right_arrow"
            android:drawablePadding="@dimen/dp_4"
            android:text="查看详情"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_desc"
            android:text="￥60"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_title"
            android:textColor="@color/white"
            android:text="减免上门费：5次"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_count"
            android:textColor="@color/white"
            android:text="有效期：80天"/>
        <View
            android:id="@+id/line_remark"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@id/tv_time"
            android:layerType="software"
            android:background="@drawable/dotted_line_white"/>
        <Button
            android:id="@+id/btn_gm"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_19"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:textColor="@color/bar"
            android:layout_below="@+id/line_remark"
            android:background="@drawable/taocanliebiao"
            android:text="立即购买"/>

        <TextView
            android:id="@+id/tv_yingjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line_remark"
            android:textColor="@color/white"
            android:text="注：不包括硬件更换费用"/>
    </RelativeLayout>
</LinearLayout>
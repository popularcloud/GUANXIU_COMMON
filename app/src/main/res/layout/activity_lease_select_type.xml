<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title_lease" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        android:background="@drawable/down_radius_white">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:src="@drawable/image_default_picture"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_good_price"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_12">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_13" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red_fill_3a_3px"
                    android:paddingLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_2"
                    android:text="租赁"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_spece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_11"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_99"
                android:layout_marginTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2"
                android:background="@color/white"
                android:text="属性" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="￥99.00" />
            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/sp_11"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_99"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_gravity="right"
                android:text="x2" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        android:background="@drawable/up_radius_white">
        <ImageView
            android:id="@+id/iv_logo_01"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_return_money"/>
        <TextView
            android:id="@+id/tv_title01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:layout_toRightOf="@+id/iv_logo_01"
            android:text="我要退款(无需退货)" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/iv_logo_01"
            android:layout_below="@+id/tv_title01"
            android:text="没有收到货，或与卖家达成协议同意不用退货只退款" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/you_new"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:padding="@dimen/dp_15"
        android:background="@drawable/down_radius_white">
        <ImageView
            android:id="@+id/iv_logo_02"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_return_good"/>
        <TextView
            android:id="@+id/tv_title02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:layout_toRightOf="@+id/iv_logo_02"
            android:text="我要退货退款" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/iv_logo_02"
            android:layout_below="@+id/tv_title02"
            android:text="我要退货退款" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/you_new"/>
    </RelativeLayout>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f0_gray_line"
        android:visibility="gone"
        android:id="@+id/fragment_container"/>
</RelativeLayout>
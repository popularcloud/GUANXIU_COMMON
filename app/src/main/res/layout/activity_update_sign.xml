<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>
				<RelativeLayout
					android:layout_width="@dimen/dp_345"
					android:layout_height="@dimen/dp_118"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/sign_update_shape"
					android:layout_marginTop="@dimen/dp_15"
					android:orientation="vertical">
					<EditText
						android:id="@+id/et_mention_1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="@dimen/dp_15"
						android:layout_alignParentLeft="true"
						android:gravity="top|left"
						android:background="@color/f0_gray_line"
						android:layout_alignParentTop="true"
						android:textSize="@dimen/sp_14"
						android:maxLength="30"
						android:maxLines="3"
						android:textColor="@color/all_black"
						android:hint="请输入你的个性签名"
						android:inputType="textMultiLine"
						android:textColorHint="@color/gray_99" />
					<TextView
						android:id="@+id/txt_mention_1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_alignParentBottom="true"
						android:layout_marginRight="@dimen/dp_15"
						android:layout_marginBottom="@dimen/dp_15"
						android:text="0/30"
						android:textColor="@color/gray_99"
						android:maxLength="16"
						android:textSize="@dimen/sp_14" />
				</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />
	<TextView
		android:id="@+id/btn_comment_submit"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_44"
		android:layout_margin="@dimen/dp_15"
		android:layout_gravity="center_horizontal|bottom"
		android:background="@drawable/button_login_selector"
		android:text="保存"
		android:gravity="center"
		android:textSize="@dimen/sp_16"
		android:textColor="@color/white" />
</LinearLayout>

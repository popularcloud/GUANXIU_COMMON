<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_bg_nocorner_shape">
        <TextView
            android:id="@+id/FMoneyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="0"
            android:textStyle="bold"
            android:textSize="@dimen/sp_36"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FMoneyTV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_47"
            android:layout_marginTop="@dimen/dp_13"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="可用积分" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_11"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_11"
        android:text="积分记录"
        android:textColor="@color/gray_88"
        android:background="@color/f0_gray_line"
        android:textSize="@dimen/sp_14"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:text="暂无交易记录"
            android:textColor="@color/gray_btm"
            android:visibility="gone"
            android:textSize="12sp"/>
        <cn.bingoogolapple.refreshlayout.BGARefreshLayout
            android:id="@+id/mBGARefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/f0_gray_line"/>
        </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
    </LinearLayout>
</LinearLayout>

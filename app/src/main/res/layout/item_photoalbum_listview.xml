<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/item_default_selector"
     >

    <ImageView
        android:id="@+id/item_photoalbum_img_photo"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:contentDescription="@null"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_default_picture" />

    <TextView
        android:id="@+id/item_photoalbum_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_photoalbum_img_photo"
        android:text="ss" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@drawable/lan_xiao"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:text="上门优惠套餐"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="剩余：4次"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_title"
            android:textColor="@color/white"
            android:text="减免上门费：5次"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_count"
            android:textColor="@color/white"
            android:text="有效时间：2018-08-18-2018-11-17"/>

        <View
            android:id="@+id/line_remark"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@id/tv_time"
            android:layerType="software"
            android:background="@drawable/dotted_line_white"/>

        <TextView
            android:id="@+id/tv_yingjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line_remark"
            android:textColor="@color/white"
            android:text="注：不包括硬件更换费用"/>
        <TextView
            android:id="@+id/tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/line_remark"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_small_right_arrow"
            android:drawablePadding="@dimen/dp_8"
            android:text="查看使用区域"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/tv_yingjian"
        android:textColor="@color/red_money"
        android:text="超出使用区域"
        android:visibility="gone"/>
</LinearLayout>
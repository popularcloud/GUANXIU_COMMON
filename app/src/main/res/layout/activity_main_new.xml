<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <com.lwc.common.widget.CustomViewPager
            android:id="@+id/cViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></com.lwc.common.widget.CustomViewPager>
        <View style="@style/line_ccStyle" />
        <RadioGroup
            android:id="@+id/group_tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_home"
                style="@style/main_menu_radiobutton_style"
                android:checked="true"
                android:drawableTop="@drawable/tab_map_selector"
                android:text="首页" />

            <RadioButton
                android:id="@+id/radio_news"
                style="@style/main_menu_radiobutton_style"
                android:drawableTop="@drawable/tab_news_selector"
                android:text="资讯" />

            <RadioButton
                android:id="@+id/radio_order"
                style="@style/main_menu_radiobutton_style"
                android:drawableTop="@drawable/tab_order_selector"
                android:text="订单" />

            <RadioButton
                android:id="@+id/radio_mine"
                style="@style/main_menu_radiobutton_style"
                android:drawableTop="@drawable/tab_mine_selector"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/iv_red_dian"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="30dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:background="@drawable/circle_red_all_shape"
        android:visibility="gone" />
<RelativeLayout
    android:id="@+id/rl_show_new_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:visibility="gone">
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/ib_show_new_user"
            android:layout_width="300dp"
            android:layout_height="320dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_close_dialog"/>
    </FrameLayout>
</RelativeLayout>
</RelativeLayout>
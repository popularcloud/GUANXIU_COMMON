<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/yhj_bg">
        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtDiscountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:text="Y50"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtFullReductionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="6dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:text="满100元可用"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上门费减免优惠券"
                android:textColor="@color/black_66"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:layout_below="@+id/txtName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="2018.07.07-2018.07.31"
                android:textSize="11sp" />

            <View android:id="@+id/viewLine"
                style="@style/line_c8Style"
                android:background="@drawable/xuxian"
                android:layout_below="@+id/txtTime"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/xd_icon"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
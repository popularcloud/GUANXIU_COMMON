<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/bg_f7"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<include layout="@layout/include_title"/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">
		<TextView
			android:id="@+id/tv_money_txt"
			android:textColor="@color/black_66"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/dp_35"
			android:text="充值金额"
			android:gravity="center_vertical"
			android:textSize="@dimen/sp_15"/>
		<EditText
			android:id="@+id/et_money"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="@dimen/dp_160"
			android:layout_below="@id/tv_money_txt"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/dp_25"
			android:textSize="@dimen/sp_36"
			android:maxLength="8"
			android:gravity="left"
			android:inputType="numberSigned"
			android:digits="0123456789."
			android:background="@null"
			android:textColor="@color/all_black"
			android:textColorHint="@color/gray_99"
			android:hint=""/>
		<TextView
			android:id="@+id/tv_money_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_30"
			android:layout_marginTop="@dimen/dp_25"
			android:textColor="@color/all_black"
			android:layout_below="@id/tv_money_txt"
			android:layout_toLeftOf="@id/et_money"
			android:layout_marginRight="@dimen/dp_12"
			android:layout_alignBaseline="@+id/et_money"
			android:text="￥"/>
		<View android:layout_width="@dimen/dp_160"
			android:layout_height="1px"
			android:background="@color/line_cc"
			android:layout_below="@+id/et_money"
			android:layout_toRightOf="@+id/tv_money_unit"
			android:layout_marginTop="@dimen/dp_11"
			android:layout_marginBottom="@dimen/dp_30"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/et_money"
			android:textSize="@dimen/sp_12"
			android:layout_marginRight="@dimen/dp_20"
			android:textColor="@color/gray_99"
			android:visibility="gone"
			android:text="单次充值金额最多10000元"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rl_wechat_pay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_4"
		android:background="@drawable/selector_item_bg">
		<ImageView
			android:id="@+id/iv_wechat"
			android:layout_width="@dimen/dp_25"
			android:layout_height="@dimen/dp_25"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/account_wechat"
			android:layout_marginLeft="@dimen/dp_15"
			android:layout_marginRight="@dimen/dp_13"
			/>
		<TextView
			android:id="@+id/tv_wechat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="微信支付"
			android:gravity="center_vertical"
			android:layout_toRightOf="@+id/iv_wechat"
			android:layout_marginTop="@dimen/dp_15"
			android:textColor="@color/all_black"
			android:textSize="@dimen/sp_15"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray_99"
			android:textSize="@dimen/sp_12"
			android:layout_below="@id/tv_wechat"
			android:text="推荐安装微信的用户使用"
			android:layout_toRightOf="@+id/iv_wechat"
			android:layout_marginTop="@dimen/dp_7"
			android:layout_marginBottom="@dimen/dp_15"/>
		<ToggleButton
			android:id="@+id/tBtnSecretWechat"
			android:layout_width="@dimen/dp_20"
			android:layout_height="@dimen/dp_20"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:button="@drawable/wallet_switch_btn"
			android:checked="true"
			android:layout_marginRight="@dimen/dp_15"
			android:textOff=""
			android:textOn=""/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/rl_ali_pay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:background="@drawable/selector_item_bg">
		<ImageView
			android:id="@+id/iv_alipay"
			android:layout_width="@dimen/dp_25"
			android:layout_height="@dimen/dp_25"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/ic_paytype_ali"
			android:layout_marginLeft="@dimen/dp_15"
			android:layout_marginRight="@dimen/dp_13"
			/>
		<TextView
			android:id="@+id/tv_alipay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="支付宝支付"
			android:gravity="center_vertical"
			android:layout_toRightOf="@+id/iv_alipay"
			android:layout_marginTop="@dimen/dp_15"
			android:textColor="@color/all_black"
			android:textSize="@dimen/sp_15"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray_99"
			android:textSize="@dimen/sp_12"
			android:layout_below="@id/tv_alipay"
			android:text="推荐有支付宝账户的用户使用"
			android:layout_toRightOf="@+id/iv_alipay"
			android:layout_marginTop="@dimen/dp_7"
			android:layout_marginBottom="@dimen/dp_15"/>
		<ToggleButton
			android:id="@+id/tBtnSecretAlipay"
			android:layout_width="@dimen/dp_20"
			android:layout_height="@dimen/dp_20"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:layout_marginRight="@dimen/dp_15"
			android:button="@drawable/wallet_switch_btn"
			android:checked="false"
			android:textOff=""
			android:textOn=""/>
	</RelativeLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"/>

		<TextView
			android:id="@+id/txtWithdraw"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_44"
			android:layout_margin="@dimen/dp_15"
			android:background="@drawable/button_login_selector"
			android:text="确认充值"
			android:gravity="center"
			android:textSize="@dimen/sp_16"
			android:textColor="@color/white" />
</LinearLayout>

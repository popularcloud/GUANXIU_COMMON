<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_red_yellow">
        <include layout="@layout/include_title_no_color"/>
        <TextView
            android:id="@id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请等待平台审核"/>
        <TextView
            android:id="@+id/tv_status_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/up_radius_white"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_35">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/f0_gray_line"
            android:paddingBottom="@dimen/dp_15">
            <RelativeLayout
                android:id="@+id/rl_status_01"
                android:visibility="visible"
                android:background="@drawable/down_radius_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5">
                <LinearLayout
                    android:id="@+id/lLayout0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称"
                        android:textColor="@color/all_black"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textSize="@dimen/sp_15"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lLayout0"
                    android:contentDescription="地址"
                    android:textColor="@color/gray_99"
                    android:hint="地址"
                    android:textColorHint="@color/black"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_status_02"
                android:visibility="gone"
                android:background="@drawable/down_radius_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5">
                <LinearLayout
                    android:id="@+id/ll_return_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="退款总金额"
                        android:textColor="@color/all_black"
                        android:visibility="visible"
                        android:textSize="@dimen/sp_13"/>
                    <TextView
                        android:id="@+id/tv_return_all_money"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="180"
                        android:textColor="@color/red_money"
                        android:gravity="right"
                        android:visibility="visible"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <View
                    style="@style/line_f0Style" android:layout_marginTop="@dimen/dp_12" android:layout_marginBottom="@dimen/dp_12" android:id="@+id/ll_status_line" android:layout_below="@+id/ll_return_money"/>
                <LinearLayout
                    android:layout_below="@+id/ll_status_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="退回到余额"
                        android:textColor="@color/all_black"
                        android:visibility="visible"
                        android:textSize="@dimen/sp_13"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="查看详情"
                        android:textColor="@color/gray_99"
                        android:gravity="right"
                        android:visibility="visible"
                        android:drawableRight="@drawable/you_new"
                        android:drawablePadding="@dimen/dp_10"
                        android:textSize="@dimen/sp_13"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/up_radius_white"
                android:textSize="@dimen/sp_12"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="退租信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:src="@drawable/image_default_picture"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/down_radius_white"
                        android:layout_marginLeft="@dimen/dp_12">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_red_fill_3a_3px"
                            android:paddingLeft="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_2"
                            android:text="租赁"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:text="" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_spece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textSize="@dimen/sp_11"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/gray_99"
                        android:layout_marginTop="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingTop="@dimen/dp_2"
                        android:text="属性" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:textColor="@color/all_black"
                        android:text="￥99.00" />
                    <TextView
                        android:id="@+id/tv_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="@dimen/sp_12"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/gray_99"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="right"
                        android:text="x2" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/down_radius_white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_detail_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:text="退款原因："/>
                    <TextView
                        android:id="@+id/tv_return_reason"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:background="@color/white"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_return_reason_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_detail_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:text="退款说明："/>
                    <TextView
                        android:id="@+id/tv_return_reason_desc"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:background="@color/white"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_detail_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:text="退款金额："/>
                    <TextView
                        android:id="@+id/tv_return_money"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:background="@color/white"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:text="申请时间："/>
                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:background="@color/white"
                        android:text="2020-01-05"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_return_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_detail_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:text="退款单号："/>
                    <TextView
                        android:id="@+id/tv_return_order"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray_99"
                        android:background="@color/white"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
     android:paddingRight="@dimen/dp_15">
     <View
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="1px" />
     <TextView
         android:id="@+id/tv_btn01"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black_66"
         android:textSize="@dimen/sp_12"
         android:visibility="visible"
         android:text="联系客服"
         android:paddingTop="@dimen/dp_5"
         android:paddingBottom="@dimen/dp_5"
         android:paddingLeft="@dimen/dp_15"
         android:paddingRight="@dimen/dp_15"
         android:layout_marginRight="@dimen/dp_10"
         android:drawableLeft="@drawable/ic_take_phone_blue"
         android:drawablePadding="@dimen/dp_5"
         android:background="@drawable/circle_gray_66_shape"/>
     <TextView
         android:id="@+id/tv_btn02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/red_money"
         android:textSize="@dimen/sp_12"
         android:text="撤销申请"
         android:paddingTop="@dimen/dp_5"
         android:paddingBottom="@dimen/dp_5"
         android:paddingLeft="@dimen/dp_15"
         android:paddingRight="@dimen/dp_15"
         android:background="@drawable/circle_red_shape"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f0_gray_line"
        android:visibility="gone"
        android:id="@+id/fragment_container"/>
</RelativeLayout>
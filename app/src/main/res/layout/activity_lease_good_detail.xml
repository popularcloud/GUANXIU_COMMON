<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lwc.common.view.DisInterceptNestedScrollView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="parallax"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_collapseParallaxMultiplier="0.8">
            <LinearLayout
                android:id="@+id/user_head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.lwc.common.view.ImageCycleView
                    android:id="@+id/ad_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:scaleType="centerCrop"
                    android:background="@drawable/title_bg_new"
                    android:tag="overScroll" />
            </LinearLayout>
        </com.lwc.common.view.DisInterceptNestedScrollView>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:id="@+id/rl_title"
            android:orientation="horizontal"
            android:background="@color/transparent">
            <ImageView
                android:onClick="onBack"
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_15"
                android:src="@drawable/ic_black_back" />
            <View android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1px"
                android:background="@color/transparent"/>
            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone"
                android:src="@drawable/me_news_icon" />
            <ImageView
                android:id="@+id/imgRightTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone"
                android:src="@drawable/me_news_icon" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_good_price"
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/red_money"
            android:layout_marginRight="@dimen/dp_8"
            android:text="￥300/天"/>
        <com.lwc.common.widget.TagsLayout
            android:id="@+id/tl_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@+id/ll_good_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_14"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/black"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/down_radius_white"
        android:text="xxxx显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡显卡" />
    <LinearLayout
        android:id="@+id/ll_flow"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        android:background="@drawable/item_white_circle_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_8"
            android:text="流程"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title_bar"
        android:layout_below="@+id/ll_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        android:background="@drawable/up_radius_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_8"
            android:text="宝贝详情"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_33"
            android:layout_marginRight="@dimen/dp_8"
            android:text="租赁说明"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_33"
            android:layout_marginRight="@dimen/dp_8"
            android:text="租赁规则"/>
    </LinearLayout>
    <WebView
        android:layout_below="@+id/ll_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/black"
            android:text="联系客服"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/dp_8"
            android:text="收藏"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="购物车"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_fill_3a"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="加入购物车"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow_fill"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="立即租赁"/>
    </LinearLayout>
</RelativeLayout>
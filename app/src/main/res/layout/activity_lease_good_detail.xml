<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line">
    <ScrollView
        android:id="@+id/sv_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:background="@color/f0_gray_line"
        android:layout_marginBottom="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/f0_gray_line"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.lwc.common.view.DisInterceptNestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.8">

                    <LinearLayout
                        android:id="@+id/user_head_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.lwc.common.view.ImageCycleView
                            android:id="@+id/ad_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_120"
                            android:scaleType="centerCrop"
                            android:tag="overScroll" />
                    </LinearLayout>
                </com.lwc.common.view.DisInterceptNestedScrollView>
              <!--  <LinearLayout
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/half_circle_black"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
              <TextView
                        android:id="@+id/tv_pic_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="1/5"/>
                </LinearLayout>-->
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_good_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_header"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:gravity="bottom"
                android:paddingRight="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_6"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/sp_12" />
                <com.lwc.common.widget.TagsLayout
                    android:id="@+id/tl_tags"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_good_price"
                android:background="@drawable/down_radius_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red_fill_3a_3px"
                    android:paddingLeft="@dimen/dp_3"
                    android:layout_alignBaseline="@+id/tv_title"
                    android:paddingRight="@dimen/dp_2"
                    android:text="租赁"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_flow"
                android:layout_below="@id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@drawable/item_white_circle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/up_radius_white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_17"
                    android:text="流程"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_money"
                            android:textSize="@dimen/sp_10"
                            android:paddingRight="2dp"
                            android:textStyle="bold"
                            android:paddingLeft="2dp"
                            android:background="@drawable/round_square_red_line_red_big"
                            android:text="流程"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            android:text="①选品下单； ②月付租金；③买断续租/归还"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_money"
                            android:textSize="@dimen/sp_10"
                            android:paddingRight="2dp"
                            android:textStyle="bold"
                            android:paddingLeft="2dp"
                            android:background="@drawable/round_square_red_line_red_big"
                            android:text="续租"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            android:text="随时续租，按照所选天数对应的最低价格计算"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_money"
                            android:textSize="@dimen/sp_10"
                            android:paddingRight="2dp"
                            android:textStyle="bold"
                            android:paddingLeft="2dp"
                            android:background="@drawable/round_square_red_line_red_big"
                            android:text="买断"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            android:text="支持买断尾款，终身拥有"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/f0_gray_line"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_50"/>
            <LinearLayout
                android:id="@+id/ll_send_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_flow"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_17"
                    android:text="发货"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_send_goods"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:text="邮寄/平台送货上门"
                    />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/f0_gray_line"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_50"/>
            <LinearLayout
                android:id="@+id/ll_ensure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_send_goods"
                android:background="@drawable/down_radius_white"
                android:layout_marginTop="1px"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_17"
                    android:text="保障"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_ensuer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:text="硬件保修，硬件故障包维修退换"
                    />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_flow"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/up_radius_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_good_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="宝贝详情"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lease_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="租赁说明"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_lease_rule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="租赁规则"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_title_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_title_bar"
                android:paddingTop="@dimen/dp_3"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_good_detail_line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="──"
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/sp_12"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lease_desc_line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="──"
                    android:visibility="invisible"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_lease_rule_line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="──"
                    android:visibility="invisible"
                    android:textColor="@color/red_money"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <WebView
                android:id="@+id/wv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFF1F5"
                android:layout_below="@+id/ll_title_line" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dp_5"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_detail_customer"
            android:drawablePadding="@dimen/dp_4"
            android:text="联系客服"/>
        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_detail_collect"
            android:drawablePadding="@dimen/dp_4"
            android:text="收藏"/>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_shopCart"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_detail_car_big"
                android:drawablePadding="@dimen/dp_4"
                android:text="购物车"/>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_10"
                android:paddingRight="@dimen/dp_5"
                android:visibility="gone"
                android:text="0"
                android:textColor="@color/white"
                android:background="@drawable/btn_red_fill"/>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_fill_3a"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_6"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="加入购物车"/>
        <TextView
            android:id="@+id/tv_right_lease"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow_fill"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="立即租赁"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="15dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onBack"
            android:src="@drawable/ic_black_bg_back" />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/transparent" />
        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_7"
            android:src="@drawable/ic_black_bg_share" />
        <ImageView
            android:id="@+id/imgRightTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_black_bg_more" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back_2"
            android:onClick="onBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@drawable/ic_black_back" />
        <LinearLayout
            android:id="@+id/ll_title_bar_2"
            android:layout_toRightOf="@+id/iv_back_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="@drawable/up_radius_white"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_good_detail_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="宝贝详情"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lease_desc_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="租赁说明"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_lease_rule_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="租赁规则"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_title_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title_bar_2"
            android:layout_toRightOf="@+id/iv_back_2"
            android:paddingTop="@dimen/dp_3"
            android:background="@drawable/down_radius_white"
            android:visibility="visible"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_good_detail_line_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="────"
                android:textColor="@color/red_money"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_lease_desc_line_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="────"
                android:visibility="invisible"
                android:textColor="@color/red_money"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_lease_rule_line_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="────"
                android:visibility="invisible"
                android:textColor="@color/red_money"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f0_gray_line"
        android:visibility="gone"
        android:id="@+id/fragment_container"/>
</RelativeLayout>
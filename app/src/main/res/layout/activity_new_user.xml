<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/btn_round_white_bg">

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/black_66"
                android:textColorHint="@color/gray_99"
                android:maxLength="16"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%*_="
                android:textSize="14sp"
                android:hint="输入密码" />

            <ImageView
                android:id="@+id/show_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:src="@drawable/registered_closeeye"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/btn_round_white_bg">

            <EditText
                android:id="@+id/edtNickname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:textColor="@color/black_66"
                android:textColorHint="@color/gray_99"
                android:maxLength="10"
                android:textSize="14sp"
                android:hint="输入姓名" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_invite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/btn_round_white_bg">

            <EditText
                android:id="@+id/edtInvite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:inputType="number"
                android:textColor="@color/black_66"
                android:textColorHint="@color/gray_99"
                android:maxLength="6"
                android:digits="0123456789"
                android:textSize="14sp"
                android:hint="输入邀请码（非必填）" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="个人、企业"
                android:textColor="@color/black_66"
                android:drawableLeft="@drawable/registered_selected"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_government"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="机关单位"
                android:textColor="@color/black_66"
                android:drawableLeft="@drawable/registered_unselected"
                android:drawablePadding="5dp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:textSize="15sp"
            android:text="提交"
            android:textColor="#fff" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="我已阅读并同意"
                android:textSize="12sp"
                android:textColor="@color/gray_99"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/invoice_order_noselected"/>
            <TextView
                android:id="@+id/tv_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:text="《密修注册协议》"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:textColor="@color/blue_00aaf5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

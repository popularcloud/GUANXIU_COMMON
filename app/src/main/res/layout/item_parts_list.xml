<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:lee="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginTop="1px"
    android:padding="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:orientation="horizontal">
        <com.lwc.common.widget.ZQImageViewRoundOval
            android:id="@+id/iv_display"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/red_envelope_ubg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/dp_11"
                android:textSize="@dimen/sp_15"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="xxxx显卡" />
        <!--    <TextView
                android:id="@+id/tv_tags"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="显卡，GTX-1060,6G"/>-->
            <com.lwc.common.widget.TagsLayout
                android:id="@+id/tl_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                lee:tagHorizontalSpace="5dp"
                lee:tagVerticalSpace="20dp" />
            <TextView
                android:id="@+id/tv_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/red_money"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_10"
                android:text="￥30.00"/>
        </LinearLayout>
        </LinearLayout>
 <!--   </android.support.v7.widget.CardView>-->
</LinearLayout>
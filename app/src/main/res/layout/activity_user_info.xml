<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_f7"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_item_bg">
                <com.lwc.common.widget.CircleImageView
                    android:id="@+id/imgHeadIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="18dp"
                    android:contentDescription="@null"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/default_portrait_114" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="头像"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:layout_marginTop="1px">
                <ImageView
                    android:id="@+id/img_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_name"
                    android:ellipsize="marquee"
                    android:gravity="right"
                    android:maxLength="12"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/txt_left5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="昵称"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayoutSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new" />

                <TextView
                    android:id="@+id/txtSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_sex"
                    android:ellipsize="marquee"
                    android:gravity="right"
                    android:maxLength="24"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/txt_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="性别"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:orientation="horizontal"
                android:background="@drawable/selector_item_bg">
                <TextView
                    android:id="@+id/txt_left9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="个性签名"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:id="@+id/txtSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/txt_left9"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_toLeftOf="@+id/img_sign"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />
                <ImageView
                    android:id="@+id/img_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutIde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_ide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtIde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="marquee"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="用户"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/txt_left3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="身份"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutAccounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/txtAccounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="marquee"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="账号"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/txtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="marquee"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/txt_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="用户ID"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="1px"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtCompany"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_company"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/txt_left7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="所属单位"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutInvite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:background="@color/white"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/img_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtInvite"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_invite"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/txt_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="邀请码"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rLayoutChangePwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/you_new" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:text="修改密码"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBindCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:layout_marginTop="1px"
                android:padding="@dimen/dp_15"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_bind_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you_new" />

                <TextView
                    android:id="@+id/txt_bind_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_bind_company"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="特约维修公司"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


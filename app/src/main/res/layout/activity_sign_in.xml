<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title_red" android:id="@+id/include_title" />
    <ScrollView
        android:id="@+id/sv_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_title"
        android:layout_marginBottom="@dimen/dp_65">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_bg_nocorner_shape"
            android:paddingTop="@dimen/dp_49"
            android:paddingBottom="@dimen/dp_71"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_continuity_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_30"
                    android:text="0"
                    />
                <TextView
                    android:id="@+id/tv_continuity_sign_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:text="连续签到/天"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_total_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_30"
                    android:text="0"
                    />
                <TextView
                    android:id="@+id/tv_total_sign_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:text="累计签到/天"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_integral_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_30"
                    android:text="0"
                    />
                <TextView
                    android:id="@+id/tv_integral_sign_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:text="签到积分"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_present_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66"
            android:layout_marginTop="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/sign_in_half_round_shape">

                <TextView
                    android:id="@+id/tv_present_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:text="2019/09"/>
            <ImageView
                android:id="@+id/iv_previous"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/ic_the_previous"
                android:layout_toLeftOf="@id/tv_present_date"/>
                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@drawable/ic_the_next"
                    android:layout_toRightOf="@id/tv_present_date"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:background="@color/white"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_below="@id/tv_present_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sign_round"
                android:layout_marginLeft="@dimen/dp_40" />
            <ImageView
                android:layout_below="@id/tv_present_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sign_round"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40" />
        </RelativeLayout>
        <com.haibin.calendarview.CalendarLayout
            android:id="@+id/calendarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_present_date"
            android:background="@drawable/sign_in_end_round_shape"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:calendar_content_view_id="@+id/nestedScrollView"
            app:calendar_show_mode="only_month_view"
            app:default_status="shrink">
            <com.haibin.calendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:calendar_padding="10dp"
                app:current_day_lunar_text_color="#ff0000"
                app:current_day_text_color="#ff0000"
                app:current_month_lunar_text_color="#CFCFCF"
                app:current_month_text_color="#333333"
                app:lunar_text_size="@dimen/sp_13"
                app:max_year="2050"
                app:max_year_day="31"
                app:max_year_month="12"
                app:min_year="2008"
                app:min_year_day="1"
                app:min_year_month="1"
                app:month_view="com.lwc.common.widget.CustomerDateView.CustomMonthView"
                app:month_view_show_mode="mode_only_current"
                app:other_month_lunar_text_color="#e1e1e1"
                app:other_month_text_color="#ff000000"
                app:scheme_lunar_text_color="#CFCFCF"
                app:scheme_text="假"
                app:scheme_text_color="#333"
                app:scheme_theme_color="#128c4b"
                app:selected_lunar_text_color="#128c4b"
                app:selected_text_color="#128c4b"
                app:selected_theme_color="#80cfcfcf"
                app:week_background="#fff"
                app:week_bar_height="46dp"
                app:week_bar_view="com.lwc.common.widget.CustomerDateView.CustomWeekBar"
                app:week_line_background="#00000000"
                app:week_line_margin="16dp"
                app:week_start_with="sun"
                app:week_text_size="@dimen/sp_13"
                app:week_view="com.lwc.common.widget.CustomerDateView.CustomWeekView"
                app:year_view_background="#f6f6f6"
                app:year_view_day_text_color="#333333"
                app:year_view_day_text_size="8sp"
                app:year_view_month_text_color="#ff0000"
                app:year_view_month_text_size="20sp"
                app:year_view_scheme_color="#f17706"
                app:year_view_week_height="0dp"
                app:year_view_week_text_color="#666666"
                app:year_view_week_text_size="7sp" />
        </com.haibin.calendarview.CalendarLayout>
        <TextView
            android:id="@+id/tv_sign_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendarLayout"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/red_money"
            android:text="签到规则"/>

        <TextView
            android:id="@+id/tv_sign_rule_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign_rule"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_66"
            android:text="1.每日签到获得一个积分"/>
    </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/btn_sign"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/button_sign_selector"
        android:gravity="center"
        android:text="签到"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
         android:layout_alignParentBottom="true"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_sys_notice"
            android:drawablePadding="@dimen/dp_10"
            android:text="系统通知"
            android:textColor="@color/all_black"
            android:textSize="@dimen/sp_15" />
        <ImageView
            android:id="@+id/img_notifi"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@drawable/shezhi_anniu1" />
    </RelativeLayout>
    <View style="@style/line_c8Style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="音效/震动"
            android:drawableLeft="@drawable/ic_voice"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/all_black"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/img_voice"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@drawable/shezhi_anniu1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/txt_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/you_new"
            android:gravity="center_vertical"
            android:text="版本信息"
            android:drawableLeft="@drawable/ic_version"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/all_black"
            android:textSize="@dimen/sp_15" />
        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/tv_new"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/red_mention"
            android:visibility="visible"/>
    </RelativeLayout>
    <!--<View style="@style/line_c8Style"/>
    <TextView
        android:id="@+id/txtUserGuide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:drawableRight="@drawable/you_new"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="用户指南"
        android:drawableLeft="@drawable/ic_use_guide"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/all_black"
        android:textSize="@dimen/sp_15" />-->
    <View style="@style/line_c8Style"/>
    <TextView
        android:id="@+id/txtFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableRight="@drawable/you_new"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15"
        android:text="意见反馈"
        android:drawableLeft="@drawable/ic_feedback"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/all_black"
        android:textSize="@dimen/sp_15" />
    <View style="@style/line_c8Style"/>
    <TextView
        android:id="@+id/txtUserAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableRight="@drawable/you_new"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15"
        android:text="用户协议&amp;隐私政策"
        android:drawableLeft="@drawable/ic_user_agreement"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/all_black"
        android:textSize="@dimen/sp_15" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btnOutLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/button_login_selector"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:text="退出登录"
        android:textColor="#fff" />
</LinearLayout>

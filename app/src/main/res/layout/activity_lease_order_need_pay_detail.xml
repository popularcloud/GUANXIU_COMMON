<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="false">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_need_pay_bg">
        <include layout="@layout/include_title_no_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:text="每月租金(元)"/>
        <TextView
            android:id="@+id/tv_price_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_36"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_25"
            android:text=""/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/ll_header"
            android:background="@color/f0_gray_line"
            android:paddingBottom="@dimen/dp_35">
            <RelativeLayout
                android:id="@+id/rl_goods_detail"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15">
                <LinearLayout
                    android:id="@+id/lLayout0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text=""
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:gravity="left"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lLayout0"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/gray_99"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_arrow_right_red"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="详情"
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/sp_12"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:background="@color/f0_gray_line">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray_99"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="每期应还"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray_99"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="最后还款日"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_datas"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@color/white">
        <CheckBox
            android:id="@+id/cb_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox_selector_red"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:text="全选"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_13"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:text="合计："/>
        <TextView
            android:id="@+id/tv_SumMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/red_money"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:gravity="center|left"
            android:text="￥0.00"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_34"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_fill"
            android:maxLines="1"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="立即缴费"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f0_gray_line"
        android:visibility="gone"
        android:id="@+id/fragment_container"/>
</RelativeLayout>
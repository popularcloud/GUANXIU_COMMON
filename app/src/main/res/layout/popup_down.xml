<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_130"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_white_circle_20">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/dp_15"
            android:drawableLeft="@drawable/ic_top_message"
            android:text="消息"/>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/btn_red_fill"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:visibility="gone"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f0_gray_line" />
    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_top_main"
        android:text="首页"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f0_gray_line" />
    <TextView
        android:id="@+id/tv_shopCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_detail_car"
        android:text="购物车"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f0_gray_line" />
    <TextView
        android:id="@+id/tv_myCollect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_top_collect"
        android:text="我的收藏"/>
</LinearLayout>

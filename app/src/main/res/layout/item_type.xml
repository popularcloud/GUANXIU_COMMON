<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/transparent">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/dp_15">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_14"
			android:id="@+id/txt_name"
			android:textColor="@color/black_66"
			android:gravity="center_vertical" />

		<ImageView
			android:id="@+id/iv_delete"
			android:layout_width="@dimen/dp_15"
			android:layout_height="@dimen/dp_15"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:src="@drawable/bbs_icon_delete_image" />

		<TextView
			android:layout_width="@dimen/dp_15"
			android:layout_height="@dimen/dp_15"
			android:textSize="14sp"
			android:id="@+id/txt_money"
			android:layout_toLeftOf="@+id/iv_delete"
			android:textColor="@color/red_money"
			android:gravity="center_vertical" />
	</RelativeLayout>
	<View android:id="@+id/view_line" style="@style/line_c8Style" android:layout_marginLeft="@dimen/dp_15" android:layout_marginRight="@dimen/dp_15" />
</LinearLayout>

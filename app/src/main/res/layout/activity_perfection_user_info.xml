<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/bg_f7"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">
	<include layout="@layout/include_title"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center"
				android:background="@drawable/btn_round_white_bg"
				android:layout_margin="5dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="完善资料"
					android:textColor="@color/black_66"
					android:textSize="14sp"
					android:gravity="center_horizontal"
					android:drawablePadding="5dp"
					android:drawableTop="@drawable/identitychange_1"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="正在审核"
					android:textColor="@color/black_66"
					android:textSize="14sp"
					android:gravity="center_horizontal"
					android:drawablePadding="5dp"
					android:drawableTop="@drawable/identitychange_3"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="完成认证"
					android:textColor="@color/black_66"
					android:textSize="14sp"
					android:gravity="center_horizontal"
					android:drawablePadding="5dp"
					android:drawableTop="@drawable/identitychange_4"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="申请资料"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="20dp"
				android:textColor="@color/gray_99"
				android:textSize="13sp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/white"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/rl_name"
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="44dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="申&#160;&#160;请&#160;&#160;人"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<EditText
						android:id="@+id/edtName"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="填写申请人姓名"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textColorHint="@color/gray_99"
						android:layout_marginRight="20dp"
						android:background="@null"
						android:textSize="14sp"/>

				</LinearLayout>
				<View style="@style/line_ccStyle"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="44dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="单位名称"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<EditText
						android:id="@+id/edtCompanyName"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="填写单位名称"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textColorHint="@color/gray_99"
						android:layout_marginRight="20dp"
						android:background="@null"
						android:textSize="14sp"/>

				</LinearLayout>
				<View style="@style/line_ccStyle"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="44dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="所在位置"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<TextView
						android:layout_width="0dp"
						android:layout_weight="1"
						android:id="@+id/txtAddress"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:textColor="@color/black_66"
						android:drawableRight="@drawable/you_new"/>
				</LinearLayout>
				<View style="@style/line_ccStyle"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/white"
					android:layout_height="44dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="详细地址"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textSize="14sp"/>

					<EditText
						android:id="@+id/edtAddressDetail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="填写街道、门牌号等"
						android:layout_marginLeft="20dp"
						android:textColor="@color/black_66"
						android:textColorHint="@color/gray_99"
						android:layout_marginRight="20dp"
						android:background="@null"
						android:textSize="14sp"/>

				</LinearLayout>
				<View style="@style/line_ccStyle"/>
			</LinearLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="证明材料（例：工作牌、公章证明等，选填）"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:textColor="@color/gray_99"
				android:textSize="13sp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:background="@drawable/btn_round_white_bg"
				android:layout_margin="5dp"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="上传证明材料有助于快速通过审核"
					android:textColor="@color/black_66"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="10dp"
					android:textSize="14sp"/>
				<com.lwc.common.view.MyGridView
					android:id="@+id/gridview_my"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:numColumns="4"
					android:verticalSpacing="5dp"
					android:horizontalSpacing="5dp"
					android:layout_margin="10dp"
					android:scrollbars="none"/>
			</LinearLayout>
			<Button
				android:id="@+id/btnSubmit"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginLeft="25dp"
				android:layout_marginRight="25dp"
				android:layout_marginTop="30dp"
				android:layout_marginBottom="20dp"
				android:background="@drawable/button_login_selector"
				android:gravity="center"
				android:textSize="15sp"
				android:text="提交"
				android:textColor="#fff" />
		</LinearLayout>
	</ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.lwc.common.view.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_collapseParallaxMultiplier="0.8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_176">
        <LinearLayout
            android:id="@+id/user_head_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.lwc.common.view.ImageCycleView
                android:id="@+id/ad_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_176"
                android:scaleType="centerCrop"
                android:tag="overScroll"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/up_radius_white"
            android:visibility="visible"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/sweep_code"/>
    </RelativeLayout>

</com.lwc.common.view.DisInterceptNestedScrollView>
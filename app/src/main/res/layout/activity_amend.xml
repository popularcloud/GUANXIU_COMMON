<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:onClick="onBack"
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@drawable/ic_black_back" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_29"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_search_round_bg"
                android:layout_gravity="center_vertical">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_29"
                    android:layout_marginLeft="5dp"
                    android:hint="输入地点关键字搜索"
                    android:textColor="@color/gray_99"
                    android:textColorHint="@color/gray_99"
                    android:id="@+id/et_search"
                    android:textSize="@dimen/sp_12"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableLeft="@drawable/map_search_gray"/>
                <ImageView android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:src="@drawable/bbs_icon_delete_image"/>
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="搜索"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/all_black"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_15" />
    </LinearLayout>

    <com.lwc.common.module.repairs.view.AutoListView
        android:layout_width="match_parent"
        android:id="@+id/lv_list"
        android:cacheColorHint="@color/black_66"
        android:layout_marginTop="@dimen/dp_4"
        android:listSelector="@color/black_66"
        android:layout_height="match_parent"
        android:visibility="gone">

    </com.lwc.common.module.repairs.view.AutoListView>

</LinearLayout>
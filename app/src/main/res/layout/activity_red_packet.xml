<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_295"
        android:layout_centerInParent="true">
    <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_250"
            android:layout_centerInParent="true"
            android:background="@drawable/red_envelope_bg">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_80"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_22"
                android:visibility="gone"
                android:textStyle="bold"
                android:text="1111"
                android:textColor="@color/yellow_52"/>
        <TextView
            android:id="@+id/tv_money_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_money"
            android:textSize="@dimen/sp_18"
            android:layout_alignBaseline="@+id/tv_money"
            android:visibility="gone"
            android:text="å…ƒ"
            android:textColor="@color/yellow_52"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_close_dialog"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rl_bg"
            />
    </RelativeLayout>
</RelativeLayout>
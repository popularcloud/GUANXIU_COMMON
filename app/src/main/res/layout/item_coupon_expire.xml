<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="horizontal"
        android:background="@drawable/hs_bg">
        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="0dp"
            android:layout_weight="109"
            android:layout_height="@dimen/dp_90">
            <TextView
                android:id="@+id/txtDiscountAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y50"
                android:textStyle="normal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/txtFullReductionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="满100元可用"
                android:textSize="@dimen/dp_12"
                android:layout_below="@+id/txtDiscountAmount"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="0dp"
            android:layout_weight="236"
            android:layout_height="@dimen/dp_90"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上门费减免优惠券"
                android:textColor="@color/gray_99"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/line_cc"
                android:layout_below="@+id/txtName"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="2018.07.07-2018.07.31"
                android:textSize="@dimen/dp_12" />
                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ysy_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line">
    <include layout="@layout/include_title" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="共12件宝贝"
        android:gravity="center"
        android:background="@drawable/down_radius_white"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/dp_12"
        android:padding="@dimen/dp_15"/>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mBGARefreshLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/item_white_circle_30"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="@color/white">
        <CheckBox
            android:id="@+id/cb_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox_selector"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:text="全选"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_13"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:text="合计："/>
        <TextView
            android:id="@+id/tv_SumMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/red_money"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:gravity="center|left"
            android:text="￥0.00"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_34"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_fill"
            android:maxLines="1"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="结算(6)"/>
    </LinearLayout>
</LinearLayout>
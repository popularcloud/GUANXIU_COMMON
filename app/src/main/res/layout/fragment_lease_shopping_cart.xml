<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:background="@color/white">
    <include layout="@layout/include_title_noline"/>
    <RelativeLayout
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f0_gray_line">
        <LinearLayout
            android:id="@+id/ll_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_no_data_box"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:textColor="@color/gray_99"
                android:layout_marginTop="20dp"
                android:text="购物车暂无商品"/>

            <TextView
                android:id="@+id/tv_to_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:textColor="@color/red_money"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="29dp"
                android:paddingLeft="29dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/btn_red_line_bg_tansport"
                android:text="去逛逛"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_goodSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:visibility="visible"
            android:background="@drawable/down_radius_white"
            android:layout_below="@+id/rl_title"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_15"/>
        <cn.bingoogolapple.refreshlayout.BGARefreshLayout
            android:id="@+id/mBGARefreshLayout"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_goodSum"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="gone"
            android:background="@drawable/item_white_circle_20"
            android:layout_marginBottom="@dimen/dp_44"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:background="@drawable/item_white_circle_20"
                android:layout_height="match_parent" />
        </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="@color/white">
            <CheckBox
                android:id="@+id/cb_all_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:padding="5dp"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:button="@drawable/checkbox_selector_red"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:text="全选"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_13"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:text="合计："/>
            <TextView
                android:id="@+id/tv_SumMoney"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/red_money"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"
                android:gravity="center|left"
                android:text="￥0.00"/>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_34"
                android:textColor="@color/white"
                android:background="@drawable/btn_red_fill"
                android:maxLines="1"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="结算(0)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_button02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="@color/white">
            <CheckBox
                android:id="@+id/cb_all_box02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:padding="5dp"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:button="@drawable/checkbox_selector_red"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:text="全选"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_to_collect"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_34"
                android:textColor="@color/yellow_fe"
                android:background="@drawable/btn_yellow_line"
                android:maxLines="1"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="移入收藏夹"/>
            <TextView
                android:id="@+id/tv_del_all"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_34"
                android:textColor="@color/red_money"
                android:background="@drawable/btn_red_line"
                android:maxLines="1"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="删除"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
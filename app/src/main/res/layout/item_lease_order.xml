<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_11"
    android:background="@drawable/item_white_circle_20"
    android:paddingBottom="@dimen/dp_15"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_12"
                    android:text="订单状态"/>
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/sp_12"
                    android:text="等待付款"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">
                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:src="@drawable/image_default_picture"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/down_radius_white"
                        android:layout_marginLeft="@dimen/dp_12">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_red_fill_3a_3px"
                            android:paddingLeft="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_2"
                            android:text="租赁"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:text="" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_spece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textSize="@dimen/sp_11"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/gray_99"
                        android:layout_marginTop="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingTop="@dimen/dp_2"
                        android:text="属性" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="￥99" />
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="@dimen/sp_11"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/gray_99"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="right"
                        android:text="x2" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="right"
                android:textSize="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/all_black"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/tv_btn05"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_12"
                    android:text="联系客服"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_take_phone_blue"
                    android:drawablePadding="@dimen/dp_5"
                    android:background="@drawable/circle_gray_66_shape"/>
                <TextView
                    android:id="@+id/tv_btn04"
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_28"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_12"
                    android:text="取消订单"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone"
                    android:background="@drawable/circle_gray_66_shape"/>
                <TextView
                    android:id="@+id/tv_btn03"
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_28"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_12"
                    android:text="取消订单"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone"
                    android:background="@drawable/circle_gray_66_shape"/>
                <TextView
                    android:id="@+id/tv_btn02"
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_28"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_12"
                    android:text="取消订单"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone"
                    android:background="@drawable/circle_gray_66_shape"/>
                <TextView
                    android:id="@+id/tv_btn01"
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_28"
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/sp_12"
                    android:text="付款"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/circle_red_28_shape"/>
            </LinearLayout>
        </LinearLayout>
   <!-- </android.support.v7.widget.CardView>-->
</LinearLayout>
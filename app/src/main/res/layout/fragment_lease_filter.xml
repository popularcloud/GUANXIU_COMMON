<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="@dimen/dp_15"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/sp_12"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 android:text="价格区间"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_marginTop="@dimen/dp_15"
                 android:orientation="horizontal">
                 <EditText
                     android:id="@+id/et_price01"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="@dimen/dp_29"
                     android:hint="最低价"
                     android:textColorHint="@color/line_cc"
                     android:textColor="@color/black"
                     android:textSize="@dimen/sp_12"
                     android:gravity="center"
                     android:background="@drawable/rounded_edit_f0"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/color_33"
                     android:paddingLeft="@dimen/dp_10"
                     android:paddingRight="@dimen/dp_10"
                     android:text="-"/>
                 <EditText
                     android:id="@+id/et_price02"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:hint="最高价"
                     android:textColorHint="@color/line_cc"
                     android:textColor="@color/black"
                     android:textSize="@dimen/sp_12"
                     android:gravity="center"
                     android:layout_height="@dimen/dp_29"
                     android:background="@drawable/rounded_edit_f0"/>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll_screening_contents"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

         </LinearLayout>
     </LinearLayout>
    </ScrollView>
    <View style="@style/line_f0Style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:background="@color/white"
            android:text="取消"
            android:textColor="@color/color_33"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:background="@color/red_money"
            android:text="确定"
            android:textColor="@color/white"/>
    </LinearLayout>
    <View style="@style/line_f0Style" />
</LinearLayout>
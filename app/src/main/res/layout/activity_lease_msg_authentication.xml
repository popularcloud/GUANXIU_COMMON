<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:background="@color/f0_gray_line">
	<include layout="@layout/include_title" />
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="8px"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:layout_marginRight="15dp"
					android:text="认证"/>
				<CheckBox
					android:id="@+id/cb_enterprise"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/CustomCheckBoxTheme"
					android:textSize="15sp"
					android:textColor="@color/black"
					android:checked="true"
					android:text="企业认证"/>
				<CheckBox
					android:id="@+id/cb_personal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:textSize="15sp"
					style="@style/CustomCheckBoxTheme"
					android:textColor="@color/black"
					android:text="个人认证"/>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:id="@+id/tv_name_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="法人姓名"/>
				<EditText
					android:id="@+id/et_name"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请填写真实姓名"
					android:paddingLeft="15dp"
					android:textSize="15dp"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:background="@color/white"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_company"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="1px"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="公司名称"/>
				<EditText
					android:id="@+id/et_company_name"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请输入公司名称"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:drawablePadding="10dp"
					android:gravity="left"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="1px"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="账号"/>
				<EditText
					android:id="@+id/et_phone"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请填写手机号码"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:inputType="phone"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_code_01"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="1px"
				android:background="@color/white"
				android:focusable="false"
				android:visibility="gone"
				android:focusableInTouchMode="false"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="验证码"/>
				<EditText
					android:id="@+id/et_code_01"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请输入验证码"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:layout_height="wrap_content" />
				<View
					android:layout_width="1px"
					android:layout_height="match_parent"
					android:background="@color/gray_dd" />
				<TextView
					android:id="@+id/tv_getCode_01"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingLeft="29dp"
					android:paddingRight="29dp"
					android:textSize="15sp"
					android:focusable="false"
					android:textColor="@color/btn_blue_nomal"
					android:text="获取验证码"/>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="8px"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="身份证号"/>
				<EditText
					android:id="@+id/et_idCard"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请填写身份证号码"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:layout_height="wrap_content" />
			</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="上传身份证照片"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:orientation="horizontal">
			<com.lwc.common.widget.RoundAngleImageView
				android:id="@+id/iv_id_positive"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="102dp"
				android:padding="@dimen/dp_2"
				android:scaleType="fitXY"
				android:layout_marginRight="15dp"
				android:src="@drawable/ic_id_positive"/>
			<com.lwc.common.widget.RoundAngleImageView
				android:id="@+id/iv_id_back"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="@dimen/dp_2"
				android:scaleType="fitXY"
				android:layout_height="102dp"
				android:src="@drawable/ic_id_back"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="15dp"
			android:orientation="horizontal">
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_marginRight="15dp"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/black_66"
				android:text="身份证正面"/>
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/black_66"
				android:text="身份证反面"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_address"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="8px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="公司/店铺地址"/>
		<TextView
			android:id="@+id/tv_address"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请选择地址"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:drawablePadding="10dp"
			android:gravity="right"
			android:drawableRight="@drawable/you_new"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ll_detail_address"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="详细地址"/>
		<EditText
			android:id="@+id/et_addressDetail"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请输入详细的地址"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:drawablePadding="10dp"
			android:gravity="right"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_businessCode"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="8px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:text="营业执照信用代码"/>
		<EditText
			android:id="@+id/et_creditCode"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:hint="请输入信用代码"
			android:textColor="@color/black"
			android:textColorHint="@color/line_cc"
			android:paddingLeft="15dp"
			android:textSize="15sp"
			android:background="@color/white"
			android:drawablePadding="10dp"
			android:gravity="right"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ll_businessCode_img"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="1px"
		android:background="@color/white"
		android:padding="15dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:background="@color/white"
			android:paddingRight="15dp"
			android:textSize="15sp"
			android:layout_gravity="center"
			android:text="上传营业执照"/>
		<com.lwc.common.widget.RoundAngleImageView
			android:id="@+id/iv_business_license"
			android:layout_width="228dp"
			android:layout_height="141dp"
			android:layout_marginTop="18dp"
			android:padding="@dimen/dp_2"
			android:scaleType="fitXY"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/ic_business_license" />
	</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_field_img"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="1px"
				android:background="@color/white"
				android:padding="15dp">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:layout_gravity="center"
					android:text="上传场地租赁合作/场地购买合同"/>
				<com.lwc.common.widget.RoundAngleImageView
					android:id="@+id/iv_leaseContract"
					android:layout_width="228dp"
					android:layout_height="141dp"
					android:layout_marginTop="18dp"
					android:padding="@dimen/dp_2"
					android:scaleType="fitXY"
					android:layout_gravity="center_horizontal"
					android:src="@drawable/ic_lease_place" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_code_02"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="8px"
				android:background="@color/white"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:padding="15dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
					android:background="@color/white"
					android:paddingRight="15dp"
					android:textSize="15sp"
					android:text="验证码"/>
				<EditText
					android:id="@+id/et_code_02"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:hint="请输入验证码"
					android:textColor="@color/black"
					android:textColorHint="@color/line_cc"
					android:paddingLeft="15dp"
					android:textSize="15sp"
					android:background="@color/white"
					android:layout_height="wrap_content" />
				<View
					android:layout_width="1px"
					android:layout_height="match_parent"
					android:background="@color/gray_dd" />
				<TextView
					android:id="@+id/tv_getCode_02"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingLeft="29dp"
					android:paddingRight="29dp"
					android:focusable="false"
					android:textSize="15sp"
					android:textColor="@color/btn_blue_nomal"
					android:text="获取验证码"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="@dimen/dp_300"
				android:layout_height="wrap_content"
				android:gravity="left|center_vertical"
				android:layout_marginTop="@dimen/dp_10"
				android:paddingLeft="@dimen/dp_15"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tv_select"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:text="我已阅读并同意"
					android:textSize="@dimen/sp_11"
					android:textColor="@color/gray_99"
					android:drawablePadding="@dimen/dp_5"
					android:drawableLeft="@drawable/weixuanzhong"/>
				<TextView
					android:id="@+id/tv_user_agreement"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:gravity="center_vertical"
					android:text="《密修租赁协议》"
					android:textSize="@dimen/sp_11"
					android:textColor="@color/btn_blue_nomal"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<TextView
		android:id="@+id/btnNext"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_margin="15dp"
		android:layout_gravity="center_horizontal|bottom"
		android:background="@drawable/button_login_selector"
		android:gravity="center"
		android:textSize="15sp"
		android:text="下一步"
		android:textColor="#fff" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_my_invitation_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title" android:id="@+id/il_title_header"/>
    <RelativeLayout
        android:id="@+id/rl_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/il_title_header">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:lineSpacingExtra="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_79"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/ll_code"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"/>
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_white_bg"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_127"
        android:padding="@dimen/dp_5"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="@dimen/dp_135"
            android:layout_height="@dimen/dp_135"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫码注册"
            android:visibility="gone"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:textColor="#466eff"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_44"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_60"
                android:background="@drawable/button_shallow_white_shape"
                android:text="分享好友"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/red_39" />
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_44"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_shallow_white_shape"
                android:text="保存图片"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/red_39" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

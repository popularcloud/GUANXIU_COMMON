<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:orientation="vertical">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mBGARefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="70dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/f0_gray_line"></android.support.v7.widget.RecyclerView>

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>


    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_login_selector"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:textColor="@color/white"></TextView>

    <LinearLayout
        android:id="@+id/lLayoutDoubleButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnRepulse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/button_red_selector"
            android:text="拒绝并返修"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/button_login_selector"
            android:text="接受"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_for_prize"
        android:layout_marginBottom="150dp"
        android:background="#00000000"
        android:layout_gravity="right|bottom"
        android:visibility="gone"
        android:layout_marginRight="20dp"/>
</FrameLayout>
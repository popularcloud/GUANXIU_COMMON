<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mBGARefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
    <com.meetsl.scardview.SCardView
        android:id="@+id/cv_presentOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_7"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardBackgroundColor="@color/white"
        app:cardLightDirection="none"
        app:cardElevation="@dimen/dp_8"
        app:cardShadowStartColor="#37C0C5C7"
        app:cardShadowEndColor="#03B7BABB"
        android:layout_gravity="bottom">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/default_portrait_100"/>
            <TextView
                android:id="@+id/tv_engineer_name"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:text="张某某"
                />
            <TextView
                android:id="@+id/tv_engineer_count"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_12"
                android:text="接单量 88单"
                />

            <ImageView
                android:id="@+id/iv_call_phone"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:src="@drawable/ic_call_phone"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="right|center_vertical"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/red_money"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_54"
            android:text="检测并报价"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray_99"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_54"
            android:text=""/>
        </FrameLayout>
    </com.meetsl.scardview.SCardView>
    <include layout="@layout/include_title" />
</FrameLayout>
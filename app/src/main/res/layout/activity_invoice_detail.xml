<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/bg_f7"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<include layout="@layout/include_title"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<RelativeLayout
				android:id="@+id/rl_find_invoice"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:background="@drawable/selector_item_bg">
				<TextView
					android:id="@+id/tv_stutas"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="查看发票"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="15dp"
					android:textColor="@color/btn_blue_nomal"
					android:layout_alignParentLeft="true"
					android:layout_marginBottom="15dp"
					android:textSize="@dimen/sp_15"/>
				<TextView
					android:id="@+id/tv_time"
					android:layout_below="@+id/tv_stutas"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="10dp"
					android:layout_alignParentLeft="true"
					android:textSize="13sp"
					android:textColor="@color/black_66"
					android:text="2017-12-29 12:12"
					android:visibility="gone"/>

				<TextView
					android:id="@+id/tv_order_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="13sp"
					android:drawableRight="@drawable/you_new"
					android:drawablePadding="10dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="15dp"
					android:textColor="@color/color_33"/>
			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="@dimen/dp_15"
				android:layout_marginBottom="10dp"
				android:layout_alignParentLeft="true"
				android:textSize="@dimen/sp_14"
				android:textColor="@color/gray_99"
				android:text="收件信息"/>

			<LinearLayout
				android:id="@+id/rl_name"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="收&#160;&#160;件&#160;&#160;人"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_name"
					android:layout_marginLeft="20dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="张三"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/rl_phone"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="联系电话"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_phone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="18818997564"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/rl_address"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="详细地址"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_address"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:text="广东省东莞市莞城区金牛路121号东日大厦403"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>
			<LinearLayout
				android:id="@+id/rl_email"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="电子邮箱"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_email"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="294663966@qq.com"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="@dimen/dp_15"
				android:layout_marginBottom="10dp"
				android:layout_alignParentLeft="true"
				android:textSize="@dimen/sp_14"
				android:textColor="@color/gray_99"
				android:text="发票信息"/>

			<LinearLayout
				android:id="@+id/rl_head"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="发票抬头"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_head"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="广东立升科技有限公司"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/rl_duty"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="发票税号"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_duty"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="914587322555C"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/rl_content"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="发票内容"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_content"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="维修费用"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>
			<LinearLayout
				android:id="@+id/rl_money"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="发票金额"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_money"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="205元"
					android:layout_marginLeft="20dp"
					android:textColor="@color/red_money"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>
			<LinearLayout
				android:id="@+id/rl_apply_time"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="申请时间"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_apply_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2018-01-05 18:15"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="44dp"
				android:layout_marginTop="0.5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="发票编号"
					android:layout_marginLeft="@dimen/dp_15"
					android:textColor="@color/black_66"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:id="@+id/tv_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:textColor="@color/all_black"
					android:textSize="@dimen/sp_15"/>

			</LinearLayout>
			<RelativeLayout
				android:id="@+id/rl_order_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="20dp"
				android:background="@drawable/selector_item_bg">
				<TextView
					android:id="@+id/tv_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="此发票含2个订单"
					android:layout_marginLeft="@dimen/dp_15"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="15dp"
					android:textColor="@color/all_black"
					android:layout_alignParentLeft="true"
					android:textSize="@dimen/sp_15"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="13sp"
					android:drawableRight="@drawable/you_new"
					android:drawablePadding="10dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="15dp"
					android:textColor="@color/color_33"/>
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

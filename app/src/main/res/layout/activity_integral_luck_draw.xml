<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_integral_luck_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/include_title" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_luck_bg">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_179"
                        android:layout_marginBottom="@dimen/dp_34"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:background="@drawable/luck_red_bg">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_luck_msg"
                                android:layout_marginTop="@dimen/dp_22">
                                    <TextView
                                        android:id="@+id/tv_short_rule"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_40"
                                        android:textSize="@dimen/sp_15"
                                        android:textColor="@color/white"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text="抽奖规则:抽奖一次，消耗10个积分"/>
                            </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_light_switch"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_287"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:paddingTop="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingLeft="@dimen/dp_16"
                            android:background="@drawable/ic_luck_lamp_bg1"
                            android:orientation="vertical">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_lucky"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_luck_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_21"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/red_fd"
                    android:text="积分规则"/>
                <TextView
                    android:id="@+id/tv_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_32"
                    android:layout_marginTop="@dimen/dp_18"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:text="每个积分可以获得一次抽奖机会"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

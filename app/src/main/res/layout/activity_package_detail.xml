<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_content_bg"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_66"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="vertical"
            android:background="@drawable/item_white_circle">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/red_money"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:textStyle="bold"
            android:text="20元"/>
        <TextView
            android:id="@+id/tv_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/all_black"
            android:text="上门减免套餐"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_below="@id/tv_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_38"
            android:text="减免上门费：5次"/>
        <TextView
            android:id="@+id/tv_district"
            android:layout_below="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_38"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="5dp"
            android:text="减免地区：东城，南城，莞城，万江，后街，沙田，道滘，松山湖。"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_38"
            android:textSize="@dimen/sp_14"
            android:text="有效期：70天（购买后显示日期）"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layerType="software"
            android:background="@drawable/dash_line"/>
        <TextView
            android:id="@+id/tv_tcsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_38"
            android:text="套餐说明"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_below="@+id/tv_tcsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_38"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="@dimen/dp_50"
            android:text="1.购买套餐后，请在有效期内尽快使用。\n2.所有套餐内均不包含硬件更换费用。\n3.活动一切解释权归密修所有。"/>
        </LinearLayout>
    <Button
        android:id="@+id/btn_gm"
        android:layout_width="@dimen/dp_261"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:visibility="visible"
        android:text="立即购买"/>
</FrameLayout>
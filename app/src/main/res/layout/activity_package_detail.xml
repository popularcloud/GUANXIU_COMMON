    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/ic_pakage_bg_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="360">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/red_money"
            android:visibility="invisible"
            android:text="￥20"/>
        <TextView
            android:id="@+id/tv_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:layout_below="@id/tv_money"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/all_black"
            android:text="上门减免套餐"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_below="@id/tv_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_money"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_53"
            android:text="减免上门费：5次"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_money"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_53"
            android:textSize="@dimen/sp_14"
            android:text="有效期：70天（购买后显示日期）"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="762">
        <TextView
            android:id="@+id/tv_tcsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_28"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_53"
            android:text="套餐说明"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_below="@+id/tv_tcsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_53"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="10dp"
            android:text="1.购买套餐后，请在有效期内尽快使用。\n2.所有套餐内均不包含硬件更换费用。\n3.活动一切解释权归密修所有。"/>
        <TextView
            android:id="@+id/tv_district"
            android:layout_below="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_money"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="@dimen/dp_53"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="5dp"
            android:text="减免地区：东城，南城，莞城，万江，后街，沙田，道滘，松山湖。"/>

        <Button
            android:id="@+id/btn_gm"
            android:layout_width="@dimen/dp_269"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/button_red_shape"
            android:textColor="@color/white"
            android:visibility="visible"
            android:text="立即购买"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
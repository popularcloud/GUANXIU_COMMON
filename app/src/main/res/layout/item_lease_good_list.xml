<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:lee="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_isAdd"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:button="@drawable/checkbox_selector_red"
            android:visibility="visible"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="@dimen/dp_127"
            android:layout_height="@dimen/dp_127"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@drawable/red_envelope_ubg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_127"
            android:layout_marginLeft="@dimen/dp_13"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red_fill_3a_3px"
                    android:paddingLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_2"
                    android:text="租赁"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:text="" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_11"
                android:layout_gravity="center_vertical"
                android:text="i5/2代/4G/500G" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/red_money"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="￥30.00"/>
                <ImageView
                    android:id="@+id/iv_add_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_add_shopcar"/>
            </RelativeLayout>
            <com.lwc.common.widget.TagsLayout
                android:id="@+id/tl_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        </LinearLayout>
 <!--   </android.support.v7.widget.CardView>-->
</LinearLayout>
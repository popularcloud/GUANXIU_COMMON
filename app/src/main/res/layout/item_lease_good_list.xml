<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:lee="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginTop="1px"
    android:padding="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="@dimen/dp_127"
            android:layout_height="@dimen/dp_127"
            android:src="@drawable/red_envelope_ubg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_127"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_18"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="xxxx显卡" />
            <TextView
                android:id="@+id/tv_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_11"
                android:layout_gravity="center_vertical"
                android:text="i5/2代/4G/500G" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/red_money"
                android:layout_marginTop="@dimen/dp_10"
                android:text="￥30.00"/>
            <com.lwc.common.widget.TagsLayout
                android:id="@+id/tl_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        </LinearLayout>
 <!--   </android.support.v7.widget.CardView>-->
</LinearLayout>
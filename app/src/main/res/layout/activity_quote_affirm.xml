<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center|left"
                    android:text="故障描述"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />
                <View style="@style/line_ccStyle"/>
                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:text="故障图片"
                    android:textColor="@color/all_black"
                    android:textSize="@dimen/sp_15" />

                <View style="@style/line_ccStyle" />
                <com.lwc.common.view.MyGridView
                    android:id="@+id/gridview_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:numColumns="4"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_7"
                    android:scrollbars="none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/f0_gray_line"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_14"
                    android:text="解决方案"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_14" />
                <LinearLayout
                    android:id="@+id/ll_jjfa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/f0_gray_line"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_hardware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/f0_gray_line"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_hardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_14"
                    android:text="硬件明细"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_14" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_hardware"
                    android:background="@color/f0_gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hardTitle"
                    android:visibility="visible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_15"
                android:text="维修总额"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_14" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/f0_gray_line"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_smf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:background="@color/white"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="基本上门费"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/sp_15" />
                    <TextView
                        android:id="@+id/tv_smf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_fwf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:id="@+id/tv_titel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/sp_15"
                        android:text="软件维修费"
                      />
                    <TextView
                        android:id="@+id/tv_fwf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_yjf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/sp_15"
                        android:text="硬件更换费" />

                    <TextView
                        android:id="@+id/tv_yjf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_qtf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/sp_15"
                        android:text="其它费用" />
                    <TextView
                        android:id="@+id/tv_qtf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/sp_15"
                        android:text="备注" />
                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/sp_15"  />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/red_money"
                        android:textSize="@dimen/sp_15"
                        android:text="优惠券减免" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/red_money"
                        android:drawableRight="@drawable/you_new"
                        android:drawablePadding="@dimen/dp_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/red_money"
                        android:textSize="@dimen/sp_15"
                        android:text="套餐减免" />

                    <TextView
                        android:id="@+id/tv_pak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/red_money"
                        android:drawableRight="@drawable/you_new"
                        android:drawablePadding="@dimen/dp_5" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="1px"
                    android:padding="@dimen/dp_15"
                    android:gravity="right"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/dp_15">
        <Button
            android:id="@+id/btnRefuse"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/button_red_selector"
            android:gravity="center"
            android:text="拒绝维修"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnAffirm"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/button_login_selector"
            android:gravity="center"
            android:text="确认维修"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>
